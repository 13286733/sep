doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Loan Management System
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, minimal-ui')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    // for ios 7 style, multi-resolution icon of 152x152
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-barstyle', content='black-translucent')
    link(rel='apple-touch-icon', href='/assets/images/logo.png')
    meta(name='apple-mobile-web-app-title', content='Flatkit')
    // for Chrome on Android, multi-resolution icon of 196x196
    meta(name='mobile-web-app-capable', content='yes')
    link(rel='shortcut icon', sizes='196x196', href='/assets/images/logo.png')
    // style
    link(rel='stylesheet', href='/assets/animate.css/animate.min.css', type='text/css')
    link(rel='stylesheet', href='/assets/glyphicons/glyphicons.css', type='text/css')
    link(rel='stylesheet', href='/assets/font-awesome/css/font-awesome.min.css', type='text/css')
    link(rel='stylesheet', href='/assets/material-design-icons/material-design-icons.css', type='text/css')
    link(rel='stylesheet', href='/assets/bootstrap/dist/css/bootstrap.min.css', type='text/css')
    // build:css /assets/styles/app.min.css
    link(rel='stylesheet', href='/assets/styles/app.css', type='text/css')
    // endbuild
    link(rel='stylesheet', href='/assets/styles/font.css', type='text/css')
    // added by Bikash
    link(rel='stylesheet', href='/assets/styles/style.css', type='text/css')
  body
    #app.app
      // ############ LAYOUT START
      .background-block
        a.nav-link.login-logo(href='/')
          img(src='/logo.png', style='background-position: 50% 10%; background-repeat: no-repeat;')
        .center-block.w-xxl.w-auto-xs.p-y-md
         .p-a-md.box-color.r.box-shadow-z1.text-color.m-a
          .m-b.text-sm.text-primary
            | Sign in with your UTS Account
          form(method='post', action='/authentication/login')
            .md-form-group.float-label
              input.md-input(type='text', name='email', required='', value='admin@student.uts.edu.au')
              label Email
            .md-form-group.float-label
              input.md-input(type='password', name='password', required='', value='password')
              label Password
            .m-b-md
              label.md-check
                input(type='checkbox', name='remember')
                i.primary
                |  Keep me signed in
            button.btn.primary.btn-block.p-x-md(type='submit') Sign in
          .p-v-lg.text-center
            .m-b
              a.text-primary._600(ui-sref='access.forgot-password', href='forgot-password.html') Forgot password?
      // ############ LAYOUT END
    // build:js /scripts/app.html.js
    // jQuery
    script(src='/libs/jquery/jquery/dist/jquery.js')
    // Bootstrap
    script(src='/libs/jquery/tether/dist/js/tether.min.js')
    script(src='/libs/jquery/bootstrap/dist/js/bootstrap.js')
    // core
    script(src='/libs/jquery/underscore/underscore-min.js')
    script(src='/libs/jquery/jQuery-Storage-API/jquery.storageapi.min.js')
    script(src='/libs/jquery/PACE/pace.min.js')
    script(src='/scripts/config.lazyload.js')
    script(src='/scripts/palette.js')
    script(src='/scripts/ui-load.js')
    script(src='/scripts/ui-jp.js')
    script(src='/scripts/ui-include.js')
    script(src='/scripts/ui-device.js')
    script(src='/scripts/ui-form.js')
    script(src='/scripts/ui-nav.js')
    script(src='/scripts/ui-screenfull.js')
    script(src='/scripts/ui-scroll-to.js')
    script(src='/scripts/ui-toggle-class.js')
    script(src='/scripts/app.js')
    // ajax
    script(src='/libs/jquery/jquery-pjax/jquery.pjax.js')
    script(src='/scripts/ajax.js')
    // endbuild
